{
  "name": "@notiz/design-showcase",
  "version": "0.0.3",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:elements": "ng build --prod --output-hashing none --project elements && npm run pack:elements",
    "pack:elements": "cat ./dist/elements/{runtime,polyfills,main}-es5.js > dist/elements/elements.js && ls -lah dist/elements/elements.js",
    "build:components": "ng build --project components --prod && ng build --prod --output-hashing none && cp dist/elements-showcase/styles.css dist/components",
    "publish:ngx-design": "npm run build:components && npm publish dist/components --tag alpha",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "storybook": "start-storybook -p 6006 -s ./dist/elements",
    "build-storybook": "build-storybook",
    "version": "conventional-changelog -p angular -i ./CHANGELOG.md -s && git add CHANGELOG.md"
  },
  "dependencies": {
    "@angular/animations": "9.1.1",
    "@angular/common": "9.1.1",
    "@angular/compiler": "9.1.1",
    "@angular/core": "9.1.1",
    "@angular/elements": "9.1.1",
    "@angular/forms": "9.1.1",
    "@angular/platform-browser": "9.1.1",
    "@angular/platform-browser-dynamic": "9.1.1",
    "@angular/router": "9.1.1",
    "document-register-element": "1.14.3",
    "rxjs": "6.5.5",
    "tslib": "1.11.1",
    "zone.js": "0.10.2"
  },
  "devDependencies": {
    "@angular-builders/custom-webpack": "9.0.0",
    "@angular-devkit/build-angular": "0.901.1",
    "@angular-devkit/build-ng-packagr": "0.901.1",
    "@angular/cli": "9.1.1",
    "@angular/compiler-cli": "9.1.1",
    "@angular/language-service": "9.1.1",
    "@babel/core": "7.9.0",
    "@fullhuman/postcss-purgecss": "2.1.2",
    "@storybook/addon-actions": "5.3.17",
    "@storybook/addon-links": "5.3.17",
    "@storybook/addon-notes": "5.3.17",
    "@storybook/addons": "5.3.17",
    "@storybook/angular": "5.3.17",
    "@storybook/html": "5.3.17",
    "@types/jasmine": "3.5.0",
    "@types/jasminewd2": "2.0.3",
    "babel-loader": "8.1.0",
    "codelyzer": "5.1.2",
    "jasmine-core": "3.5.0",
    "jasmine-spec-reporter": "4.2.1",
    "karma": "4.3.0",
    "karma-chrome-launcher": "3.1.0",
    "karma-coverage-istanbul-reporter": "2.1.0",
    "karma-jasmine": "2.0.1",
    "karma-jasmine-html-reporter": "1.4.2",
    "ng-packagr": "9.1.1",
    "postcss-import": "12.0.1",
    "postcss-loader": "3.0.0",
    "postcss-scss": "2.0.0",
    "prettier": "2.0.4",
    "protractor": "5.4.3",
    "tailwindcss": "1.2.0",
    "ts-node": "8.3.0",
    "tslint": "6.1.1",
    "typescript": "3.8.3"
